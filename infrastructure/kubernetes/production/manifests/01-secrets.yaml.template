# =============================================================================
# Skillancer Secrets
# =============================================================================
# IMPORTANT: Replace placeholder values before applying!
# These are created manually on the server, not committed to git.
#
# Usage:
#   1. Copy this file to the server
#   2. Replace all <PLACEHOLDER> values
#   3. kubectl apply -f 01-secrets.yaml
# =============================================================================

apiVersion: v1
kind: Secret
metadata:
  name: skillancer-secrets
  namespace: skillancer
type: Opaque
stringData:
  # Database
  DATABASE_URL: "postgresql://skillancer_admin:REPLACE_PG_PASSWORD@10.42.0.1:5432/skillancer"
  PG_PASSWORD: "REPLACE_PG_PASSWORD"

  # Redis
  REDIS_URL: "redis://:REPLACE_REDIS_PASSWORD@10.42.0.1:6379/0"
  REDIS_PASSWORD: "REPLACE_REDIS_PASSWORD"

  # Auth / JWT
  JWT_SECRET: "REPLACE_JWT_SECRET"
  JWT_REFRESH_SECRET: "REPLACE_JWT_REFRESH_SECRET"
  SESSION_SECRET: "REPLACE_SESSION_SECRET"

  # Stripe
  STRIPE_SECRET_KEY: "REPLACE_STRIPE_SECRET_KEY"
  STRIPE_WEBHOOK_SECRET: "REPLACE_STRIPE_WEBHOOK_SECRET"
  STRIPE_PUBLISHABLE_KEY: "REPLACE_STRIPE_PUBLISHABLE_KEY"

  # Cloudflare R2 (Object Storage)
  S3_ENDPOINT: "https://56f34d4c32d7deeeb917c5e27e0083ac.r2.cloudflarestorage.com"
  S3_ACCESS_KEY_ID: "REPLACE_R2_ACCESS_KEY_ID"
  S3_SECRET_ACCESS_KEY: "REPLACE_R2_SECRET_ACCESS_KEY"
  S3_BUCKET_UPLOADS: "skillancer-production-uploads"
  S3_BUCKET_ASSETS: "skillancer-production-assets"
  S3_BUCKET_RECORDINGS: "skillancer-production-recordings"
  S3_REGION: "auto"
  S3_FORCE_PATH_STYLE: "false"
  S3_CDN_URL: "https://cdn.skillancer.com"

  # PHI/PII Encryption (CRITICAL - Keep secure!)
  ENCRYPTION_MASTER_KEY: "REPLACE_WITH_64_HEX_CHARS_FROM_openssl_rand_-hex_32"
  ENCRYPTION_ALGORITHM: "aes-256-gcm"

  # Hetzner Cloud API (for SkillPod volumes)
  HETZNER_API_TOKEN: "REPLACE_HETZNER_API_TOKEN"
  HETZNER_LOCATION: "fsn1"
  HETZNER_VOLUME_SIZE: "10"

  # Email (SMTP)
  SMTP_HOST: "REPLACE_SMTP_HOST"
  SMTP_PORT: "587"
  SMTP_USER: "REPLACE_SMTP_USER"
  SMTP_PASSWORD: "REPLACE_SMTP_PASSWORD"
  SMTP_FROM: "noreply@skillancer.com"

  # AI / ML
  OPENAI_API_KEY: "REPLACE_OPENAI_API_KEY"

  # Firebase (push notifications)
  FIREBASE_PROJECT_ID: "REPLACE_FIREBASE_PROJECT_ID"
  FIREBASE_CLIENT_EMAIL: "REPLACE_FIREBASE_CLIENT_EMAIL"
  FIREBASE_PRIVATE_KEY: "REPLACE_FIREBASE_PRIVATE_KEY"
