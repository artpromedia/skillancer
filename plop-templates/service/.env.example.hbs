# ===========================================
# {{name}} Environment Variables
# ===========================================
# Copy this file to .env and configure

# ===========================================
# General
# ===========================================
NODE_ENV=development
SERVICE_NAME={{name}}
SERVICE_VERSION=0.0.1

# ===========================================
# Server
# ===========================================
PORT={{port}}
HOST=0.0.0.0

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=debug
LOG_PRETTY=true

{{#if withDatabase}}
# ===========================================
# Database
# ===========================================
DATABASE_URL="postgresql://skillancer:skillancer_dev@localhost:5432/skillancer_dev?schema=public"
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
{{/if}}

{{#if withRedis}}
# ===========================================
# Redis
# ===========================================
REDIS_URL="redis://localhost:6379"
{{/if}}

# ===========================================
# CORS
# ===========================================
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# ===========================================
# Features
# ===========================================
FEATURE_SWAGGER=true
FEATURE_METRICS=true
