# =============================================================================
# Notification Service Environment Configuration
# =============================================================================

# Server Configuration
NODE_ENV=development
HOST=0.0.0.0
PORT=4006
LOG_LEVEL=debug

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/skillancer?schema=public

# Redis (optional, for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# SendGrid Configuration
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@skillancer.com
SENDGRID_FROM_NAME=Skillancer
SENDGRID_WEBHOOK_KEY=your-webhook-verification-key

# Firebase Cloud Messaging
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000

# Batch Processing
BATCH_SIZE=100
BATCH_DELAY_MS=1000

# Retry Settings
MAX_RETRIES=3
RETRY_DELAY_MS=5000

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
