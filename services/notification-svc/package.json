{
  "name": "@skillancer/notification-svc",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Push notifications and email service for Skillancer platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./services": {
      "types": "./dist/services/index.d.ts",
      "import": "./dist/services/index.js"
    },
    "./types": {
      "types": "./dist/types/notification.types.d.ts",
      "import": "./dist/types/notification.types.js"
    }
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm || true",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@prisma/client": "^5.15.0",
    "@sendgrid/mail": "^8.1.0",
    "@skillancer/cache": "workspace:*",
    "@skillancer/database": "workspace:*",
    "@skillancer/logger": "workspace:*",
    "@skillancer/types": "workspace:*",
    "@skillancer/utils": "workspace:*",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "firebase-admin": "^12.0.0",
    "pino": "^9.1.0",
    "pino-pretty": "^11.2.0",
    "zod": "^3.23.8",
    "bullmq": "^5.13.0"
  },
  "devDependencies": {
    "@skillancer/config": "workspace:*",
    "@types/node": "^20.14.2",
    "prisma": "^5.15.0",
    "rimraf": "^5.0.7",
    "tsup": "^8.5.1",
    "tsx": "^4.15.4",
    "typescript": "^5.4.5",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
