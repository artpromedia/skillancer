{
  "name": "@skillancer/financial-svc",
  "version": "1.0.0",
  "description": "Financial services including Skillancer Card, Invoice Financing, and Tax Vault",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./services": {
      "types": "./dist/services/index.d.ts",
      "import": "./dist/services/index.js"
    },
    "./routes": {
      "types": "./dist/routes/index.d.ts",
      "import": "./dist/routes/index.js"
    },
    "./types": {
      "types": "./dist/types/financial.types.d.ts",
      "import": "./dist/types/financial.types.js"
    }
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/sensible": "^5.6.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.1.0",
    "@fastify/under-pressure": "^8.5.1",
    "@prisma/client": "^5.15.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "pino": "^9.1.0",
    "pino-pretty": "^11.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@skillancer/config": "workspace:*",
    "@skillancer/database": "workspace:*",
    "@types/node": "^20.14.2",
    "prisma": "^5.15.0",
    "rimraf": "^5.0.7",
    "tsx": "^4.15.4",
    "typescript": "^5.4.5",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
