# =============================================================================
# Financial Service Environment Configuration
# =============================================================================

# Server Configuration
NODE_ENV=development
HOST=0.0.0.0
PORT=3008
LOG_LEVEL=debug

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/skillancer?schema=public

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Banking Partner Integration (Unit, Synapse, etc.)
BANKING_PARTNER=unit
BANKING_API_URL=https://api.s.unit.sh
BANKING_API_TOKEN=your-unit-api-token
BANKING_ORG_ID=your-org-id

# Card Issuing
CARD_ISSUER=stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_ISSUING_CARD_PRODUCT=your-card-product-id

# Invoice Financing Partner
INVOICE_FINANCE_PARTNER=fundbox
FUNDBOX_API_KEY=your-fundbox-api-key
FUNDBOX_API_SECRET=your-fundbox-api-secret

# Tax Withholding Configuration
DEFAULT_TAX_WITHHOLDING_RATE=0.25
TAX_ACCOUNT_PARTNER=treasury_prime
TREASURY_PRIME_API_KEY=your-treasury-prime-api-key

# Payment Processing
PAYMENT_PROCESSOR=stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Encryption Keys (for sensitive financial data)
ENCRYPTION_KEY=your-256-bit-encryption-key-here
ENCRYPTION_IV=your-initialization-vector

# Rate Limiting
RATE_LIMIT_MAX=30
RATE_LIMIT_TIME_WINDOW=60000

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
