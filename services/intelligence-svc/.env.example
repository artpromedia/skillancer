# =============================================================================
# Intelligence Service Environment Configuration
# =============================================================================

# Server Configuration
NODE_ENV=development
HOST=0.0.0.0
PORT=3010
LOG_LEVEL=debug

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/skillancer?schema=public

# Redis (for caching predictions)
REDIS_URL=redis://localhost:6379

# ML Model Configuration
ML_MODEL_PATH=/app/models
ML_MODEL_VERSION=1.0.0

# External ML Services (optional)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Prediction Configuration
PREDICTION_CONFIDENCE_THRESHOLD=0.7
MAX_PREDICTIONS_PER_REQUEST=10
PREDICTION_CACHE_TTL_SECONDS=3600

# Benchmarking
BENCHMARK_UPDATE_FREQUENCY=daily
BENCHMARK_MIN_SAMPLE_SIZE=100

# Rate Limiting
RATE_LIMIT_MAX=50
RATE_LIMIT_TIME_WINDOW=60000

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
