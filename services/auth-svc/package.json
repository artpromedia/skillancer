  "private": true,
  "type": "module",
  "description": "Authentication and authorization service for Skillancer platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
