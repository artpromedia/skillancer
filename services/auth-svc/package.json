    "fastify-plugin": "^4.5.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.0",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "@skillancer/config": "workspace:*",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
