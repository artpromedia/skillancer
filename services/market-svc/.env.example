# =============================================================================
# Market Service Environment Configuration
# =============================================================================

# Server Configuration
NODE_ENV=development
HOST=0.0.0.0
PORT=3002
LOG_LEVEL=debug

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/skillancer?schema=public

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# Elasticsearch (for search)
ELASTICSEARCH_URL=http://localhost:9200
