# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000

# Search Configuration
SEARCH_RESULTS_PER_PAGE=20
SEARCH_MAX_RESULTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
