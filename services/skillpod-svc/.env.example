# =============================================================================
# SkillPod Service Environment Configuration
# =============================================================================

# Server Configuration
NODE_ENV=development
HOST=0.0.0.0
PORT=3003
LOG_LEVEL=debug

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/skillancer?schema=public

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# Learning Platform Configuration
MAX_COURSE_ENROLLMENTS=100
ASSESSMENT_TIMEOUT_MINUTES=60
CERTIFICATE_VALIDITY_DAYS=365

# Object Storage (Cloudflare R2 - S3-compatible)
# For local dev, use LocalStack
S3_ENDPOINT=http://localhost:4566
S3_REGION=auto
S3_ACCESS_KEY_ID=test
S3_SECRET_ACCESS_KEY=test
S3_BUCKET_UPLOADS=skillancer-dev-uploads
S3_BUCKET_RECORDINGS=skillancer-dev-recordings

# Production R2 Example:
# S3_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com
# S3_REGION=auto
# S3_ACCESS_KEY_ID=<r2-access-key>
# S3_SECRET_ACCESS_KEY=<r2-secret-key>
# S3_BUCKET_UPLOADS=skillancer-production-uploads
# S3_BUCKET_RECORDINGS=skillancer-production-recordings

# Hetzner Cloud (for persistent volumes)
HETZNER_API_TOKEN=your-hetzner-api-token
HETZNER_LOCATION=fsn1
HETZNER_VOLUME_SIZE=10

# Video Processing (optional)
VIDEO_TRANSCODING_ENABLED=false
VIDEO_PROVIDER=mux
MUX_TOKEN_ID=your-mux-token-id
MUX_TOKEN_SECRET=your-mux-token-secret

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
