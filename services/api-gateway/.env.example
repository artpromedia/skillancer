# =============================================================================
# API Gateway Environment Configuration
# =============================================================================

# Server Configuration
NODE_ENV=development
HOST=0.0.0.0
PORT=4000
LOG_LEVEL=debug

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-32-chars
JWT_EXPIRES_IN=1h

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_METRICS=true

# Downstream Services URLs
AUTH_SERVICE_URL=http://localhost:3001
MARKET_SERVICE_URL=http://localhost:3002
SKILLPOD_SERVICE_URL=http://localhost:3003
COCKPIT_SERVICE_URL=http://localhost:3004
BILLING_SERVICE_URL=http://localhost:3005
NOTIFICATION_SERVICE_URL=http://localhost:4006

# Moat Services URLs
EXECUTIVE_SERVICE_URL=http://localhost:3007
FINANCIAL_SERVICE_URL=http://localhost:3008
TALENT_GRAPH_SERVICE_URL=http://localhost:3009
INTELLIGENCE_SERVICE_URL=http://localhost:3010
COPILOT_SERVICE_URL=http://localhost:3011

# Circuit Breaker Configuration
CIRCUIT_BREAKER_TIMEOUT=30000
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_RESET_TIMEOUT=30000
CIRCUIT_BREAKER_VOLUME_THRESHOLD=10

# Redis Configuration (optional, for distributed rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
