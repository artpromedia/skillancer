# =============================================================================
# Talent Graph Service Environment Configuration
# =============================================================================

# Server Configuration
NODE_ENV=development
HOST=0.0.0.0
PORT=3009
LOG_LEVEL=debug

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/skillancer?schema=public

# Redis (for caching graph queries)
REDIS_URL=redis://localhost:6379

# Graph Database (optional, for complex graph queries)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000

# Graph Processing
MAX_GRAPH_DEPTH=3
MAX_CONNECTIONS_PER_QUERY=100
CACHE_TTL_SECONDS=3600

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
