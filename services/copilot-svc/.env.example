# =============================================================================
# Copilot Service Environment Configuration
# =============================================================================

# Server Configuration
NODE_ENV=development
HOST=0.0.0.0
PORT=3010
LOG_LEVEL=debug

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/skillancer?schema=public

# JWT Authentication (shared across all Skillancer services)
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=1h

# Redis (for rate limiting)
REDIS_URL=redis://localhost:6379

# ML Recommendation Service (AI/ML delegation)
# All AI/ML operations (proposals, rates, market insights) are delegated
# to ml-recommendation-svc. This service does NOT call OpenAI/Anthropic directly.
ML_RECOMMENDATION_SERVICE_URL=http://ml-recommendation-svc:8080
ML_SERVICE_TOKEN=your-shared-service-token
ML_SERVICE_TIMEOUT_MS=15000

# Rate Limiting (per user)
RATE_LIMIT_MAX=50
RATE_LIMIT_TIME_WINDOW=60000

# Proposal Draft Settings
MAX_PROPOSAL_LENGTH=5000
MIN_PROPOSAL_LENGTH=200

# Cache TTL
MARKET_DATA_CACHE_TTL=86400

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
