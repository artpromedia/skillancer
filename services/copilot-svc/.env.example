# =============================================================================
# Copilot Service Environment Configuration
# =============================================================================

# Server Configuration
NODE_ENV=development
HOST=0.0.0.0
PORT=3010
LOG_LEVEL=debug

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/skillancer?schema=public

# Redis (for caching AI responses)
REDIS_URL=redis://localhost:6379

# AI Provider Configuration
AI_PROVIDER=anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
OPENAI_API_KEY=sk-your-openai-api-key

# AI Model Settings
AI_MODEL=claude-3-sonnet-20240229
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7

# Rate Limiting (per user)
RATE_LIMIT_MAX=50
RATE_LIMIT_TIME_WINDOW=60000

# Proposal Draft Settings
MAX_PROPOSAL_LENGTH=5000
MIN_PROPOSAL_LENGTH=200

# Rate Suggestion Settings
MARKET_DATA_CACHE_TTL=86400

# Caching
AI_RESPONSE_CACHE_TTL=3600

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
