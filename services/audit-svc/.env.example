# =============================================================================
# Audit Service Environment Configuration
# =============================================================================

# Server Configuration
NODE_ENV=development
HOST=0.0.0.0
PORT=3012
LOG_LEVEL=debug

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/skillancer?schema=public

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# Audit Log Configuration
AUDIT_LOG_RETENTION_DAYS=2555
AUDIT_LOG_BATCH_SIZE=100

# External Logging (optional)
EXTERNAL_LOG_ENABLED=false
EXTERNAL_LOG_PROVIDER=datadog
DATADOG_API_KEY=your-datadog-api-key

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
