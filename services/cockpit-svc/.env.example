# =============================================================================
# Cockpit Service Environment Configuration
# =============================================================================

# Server Configuration
NODE_ENV=development
HOST=0.0.0.0
PORT=3004
LOG_LEVEL=debug

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/skillancer?schema=public

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=365
REALTIME_ANALYTICS_ENABLED=true

# Team Management
MAX_TEAM_MEMBERS=50
MAX_TEAM_ROLES=10

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
