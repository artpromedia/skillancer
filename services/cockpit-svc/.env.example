# =============================================================================
# Cockpit Service Environment Configuration
# =============================================================================

# Server Configuration
NODE_ENV=development
HOST=0.0.0.0
PORT=3004
LOG_LEVEL=debug

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/skillancer?schema=public

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# Object Storage (Cloudflare R2 - for invoice PDFs)
S3_ENDPOINT=http://localhost:4566
S3_REGION=auto
S3_ACCESS_KEY_ID=test
S3_SECRET_ACCESS_KEY=test
S3_BUCKET=skillancer-dev-invoices

# Production R2 Example:
# S3_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com
# S3_REGION=auto
# S3_ACCESS_KEY_ID=<r2-access-key>
# S3_SECRET_ACCESS_KEY=<r2-secret-key>
# S3_BUCKET=skillancer-production-invoices

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=365
REALTIME_ANALYTICS_ENABLED=true

# Team Management
MAX_TEAM_MEMBERS=50
MAX_TEAM_ROLES=10

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
