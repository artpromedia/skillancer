# ===========================================
# Skillancer Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# For local development, most values have sensible defaults

# ===========================================
# General Configuration
# ===========================================
NODE_ENV=development
APP_NAME=Skillancer
APP_URL=http://localhost:3000
API_URL=http://localhost:3001
LOG_LEVEL=debug

# ===========================================
# Database (PostgreSQL)
# ===========================================
# Local Docker: Use these defaults
DATABASE_URL="postgresql://skillancer:skillancer_dev@localhost:5432/skillancer_dev?schema=public"
DATABASE_DIRECT_URL="postgresql://skillancer:skillancer_dev@localhost:5432/skillancer_dev?schema=public"

# For connection pooling (optional)
# DATABASE_POOL_URL="postgresql://skillancer:skillancer_dev@localhost:5432/skillancer_dev?pgbouncer=true"

# ===========================================
# Redis
# ===========================================
REDIS_URL="redis://localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=

# ===========================================
# Authentication (JWT)
# ===========================================
# Generate with: openssl rand -base64 32
JWT_SECRET="change-this-in-production-use-a-strong-random-value"
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# NextAuth (for web app)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="change-this-in-production"

# ===========================================
# OAuth Providers
# ===========================================
# Google OAuth
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# GitHub OAuth
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# LinkedIn OAuth
# LINKEDIN_CLIENT_ID=
# LINKEDIN_CLIENT_SECRET=

# ===========================================
# AWS Configuration
# ===========================================
# For local development with LocalStack
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=localstack
AWS_SECRET_ACCESS_KEY=localstack
AWS_ENDPOINT_URL=http://localhost:4566

# S3 Buckets
AWS_S3_BUCKET_UPLOADS=skillancer-dev-uploads
AWS_S3_BUCKET_ASSETS=skillancer-dev-assets
AWS_S3_BUCKET_BACKUPS=skillancer-dev-backups

# For production, use real AWS credentials
# AWS_ACCESS_KEY_ID=your-real-access-key
# AWS_SECRET_ACCESS_KEY=your-real-secret-key

# ===========================================
# Email Configuration
# ===========================================
# Local development uses Mailhog
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
# SMTP_USER=
# SMTP_PASSWORD=

EMAIL_FROM="noreply@skillancer.local"
EMAIL_FROM_NAME="Skillancer"

# For production (SendGrid)
# SENDGRID_API_KEY=

# For production (Resend)
# RESEND_API_KEY=

# ===========================================
# Stripe (Payments)
# ===========================================
# Test mode keys (safe for development)
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Product/Price IDs
# STRIPE_PRICE_FREELANCER_MONTHLY=price_...
# STRIPE_PRICE_FREELANCER_YEARLY=price_...
# STRIPE_PRICE_BUSINESS_MONTHLY=price_...
# STRIPE_PRICE_BUSINESS_YEARLY=price_...

# ===========================================
# Error Tracking (Sentry)
# ===========================================
# SENTRY_DSN=
# SENTRY_AUTH_TOKEN=
SENTRY_ENVIRONMENT=development

# ===========================================
# Alerting (PagerDuty)
# ===========================================
# PAGERDUTY_ROUTING_KEY=
# PAGERDUTY_API_KEY=

# ===========================================
# Queue Configuration (BullMQ)
# ===========================================
QUEUE_DEFAULT_ATTEMPTS=3
QUEUE_DEFAULT_BACKOFF_TYPE=exponential
QUEUE_DEFAULT_BACKOFF_DELAY=1000

# ===========================================
# File Upload Configuration
# ===========================================
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Feature Flags
# ===========================================
FEATURE_SOCIAL_LOGIN=true
FEATURE_FILE_UPLOADS=true
FEATURE_PAYMENTS=true
FEATURE_NOTIFICATIONS=true
FEATURE_ANALYTICS=true

# ===========================================
# External Services
# ===========================================
# OpenAI (for AI features)
# OPENAI_API_KEY=

# Algolia (for search)
# ALGOLIA_APP_ID=
# ALGOLIA_API_KEY=
# ALGOLIA_SEARCH_KEY=

# Cloudflare (for CDN/images)
# CLOUDFLARE_ACCOUNT_ID=
# CLOUDFLARE_API_TOKEN=

# ===========================================
# Turbo Remote Cache
# ===========================================
# TURBO_TOKEN=
# TURBO_TEAM=

# ===========================================
# Development Tools
# ===========================================
# Enables debug endpoints and verbose logging
DEBUG=skillancer:*

# Prisma debug logging
# DEBUG="prisma:client"

# Enable Prisma Studio
PRISMA_STUDIO_PORT=5555

# ===========================================
# Testing
# ===========================================
# Used for running tests
TEST_DATABASE_URL="postgresql://skillancer:skillancer_dev@localhost:5432/skillancer_test?schema=public"
CI=false
