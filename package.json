{
  "name": "skillancer",
  "version": "0.0.1",
  "private": true,
  "description": "Skillancer Platform - Monorepo containing SkillPod, Skillancer Market, and Cockpit",
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck": "turbo run typecheck",
    "changeset": "changeset",
    "db:generate": "pnpm --filter @skillancer/database db:generate",
    "db:migrate:dev": "pnpm --filter @skillancer/database db:migrate:dev",
    "db:migrate:create": "pnpm --filter @skillancer/database db:migrate:create",
    "db:migrate:deploy": "pnpm --filter @skillancer/database db:migrate:deploy",
    "db:migrate:status": "pnpm --filter @skillancer/database db:migrate:status",
    "db:migrate:reset": "pnpm --filter @skillancer/database db:migrate:reset",
    "db:push": "pnpm --filter @skillancer/database db:push",
    "db:pull": "pnpm --filter @skillancer/database db:pull",
    "db:seed": "pnpm --filter @skillancer/database db:seed",
    "db:studio": "pnpm --filter @skillancer/database db:studio",
    "db:check-destructive": "pnpm --filter @skillancer/database db:check-destructive",
    "db:seed:preview": "pnpm --filter @skillancer/database db:seed:preview",
    "preview:local": "bash scripts/preview-local.sh",
    "preview:cleanup": "bash scripts/preview-cleanup.sh",
    "test:e2e:preview": "PLAYWRIGHT_BASE_URL=$PREVIEW_BASE_URL pnpm test:e2e",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@skillancer/config": "workspace:*",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css,scss}": [
      "prettier --write"
    ]
  }
}
