{
  "name": "@skillancer/logger",
  "version": "0.0.0",
  "private": true,
  "description": "Structured logging package for Skillancer services",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./fastify": {
      "types": "./dist/fastify-plugin.d.ts",
      "import": "./dist/fastify-plugin.js",
      "require": "./dist/fastify-plugin.cjs"
    },
    "./express": {
      "types": "./dist/express-middleware.d.ts",
      "import": "./dist/express-middleware.js",
      "require": "./dist/express-middleware.cjs"
    },
    "./context": {
      "types": "./dist/context.d.ts",
      "import": "./dist/context.js",
      "require": "./dist/context.cjs"
    },
    "./serializers": {
      "types": "./dist/serializers.d.ts",
      "import": "./dist/serializers.js",
      "require": "./dist/serializers.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup || true",
    "dev": "tsup --watch",
    "clean": "rm -rf dist .turbo coverage",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "lint:check": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0"
  },
  "devDependencies": {
    "@skillancer/config": "workspace:*",
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "fastify": "^4.0.0",
    "express": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "fastify": {
      "optional": true
    },
    "express": {
      "optional": true
    }
  },
  "engines": {
    "node": "20.19.4"
  }
}
