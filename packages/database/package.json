{
  "name": "@skillancer/database",
  "version": "0.0.1",
  "private": true,
  "description": "Prisma schema and database utilities for Skillancer",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.mjs",
      "require": "./dist/client.js"
    },
    "./extensions": {
      "types": "./dist/extensions/index.d.ts",
      "import": "./dist/extensions/index.mjs",
      "require": "./dist/extensions/index.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "pnpm db:generate || echo 'Warning: Prisma generate failed (offline?), continuing with build...' && tsup",
    "build:offline": "tsup",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:create": "prisma migrate dev --create-only",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset --force",
    "db:migrate:status": "prisma migrate status",
    "db:migrate:resolve": "prisma migrate resolve",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:seed": "tsx src/seed.ts",
    "db:studio": "prisma studio",
    "db:check-destructive": "tsx scripts/check-destructive-migrations.ts",
    "db:migrate:rollback": "tsx scripts/rollback-migration.ts",
    "db:lock:acquire": "tsx scripts/acquire-migration-lock.ts",
    "db:lock:release": "tsx scripts/release-migration-lock.ts",
    "db:lock:status": "tsx -e \"const { PrismaClient } = require('@prisma/client'); const { getMigrationLockStatus } = require('./src/migration-lock'); const p = new PrismaClient(); getMigrationLockStatus(p).then(s => { console.log(s); p.\\$disconnect(); });\"",
    "postinstall": "prisma generate || echo 'Prisma generate skipped (offline environment)'",
    "clean": "rimraf dist node_modules/.prisma"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0"
  },
  "prisma": {
    "schema": "prisma/schemas"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.2.0",
    "@skillancer/config": "workspace:*",
    "prisma": "^5.22.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "~5.4.0"
  }
}
