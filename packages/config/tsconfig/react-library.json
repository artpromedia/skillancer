{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Component Libraries",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@skillancer/types": ["../../packages/types/src"],
      "@skillancer/types/*": ["../../packages/types/src/*"],
      "@skillancer/utils": ["../../packages/utils/src"],
      "@skillancer/utils/*": ["../../packages/utils/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "coverage", "**/*.test.ts", "**/*.test.tsx", "**/*.stories.tsx"]
}
