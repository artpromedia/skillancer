{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node.js Services",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@skillancer/types": ["../../packages/types/src"],
      "@skillancer/types/*": ["../../packages/types/src/*"],
      "@skillancer/utils": ["../../packages/utils/src"],
      "@skillancer/utils/*": ["../../packages/utils/src/*"],
      "@skillancer/database": ["../../packages/database/src"],
      "@skillancer/database/*": ["../../packages/database/src/*"],
      "@skillancer/cache": ["../../packages/cache/src"],
      "@skillancer/cache/*": ["../../packages/cache/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "coverage", "**/*.test.ts", "**/*.spec.ts"]
}
